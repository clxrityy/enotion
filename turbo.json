{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**",
        "build/**"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "check-types": {
      "dependsOn": [
        "^check-types"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": [
        "^test"
      ],
      "inputs": [
        "src/**",
        "tests/**",
        "!**/node_modules/**",
        "!**/dist/**",
        "!**/.next/**",
        "!**/build/**",
        "!**/coverage/**",
        "package.json",
        "turbo.json",
        "tsconfig.json",
        "jest.config.*"
      ]
    },
    "clean": {
      "cache": false,
      "outputs": [
        "dist/**",
        ".next/**",
        "build/**",
        "coverage/**"
      ]
    }
  }
}
