{
  "$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
  "root": true,
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "**",
      "!node_modules",
      "!.next",
      "!dist",
      "!build",
      "!.turbo",
      "!.git",
      "!*.json"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noReactSpecificProps": "off",
        "noExplicitAny": "off",
        "noEmptyBlockStatements": "warn",
        "useIterableCallbackReturn": "off"
      },
      "a11y": {
        "useValidLang": "off",
        "useButtonType": "warn",
        "noStaticElementInteractions": "warn"
      },
      "style": {
        "useImportType": "off",
        "noNonNullAssertion": "warn"
      },
      "correctness": {
        "useJsxKeyInIterable": "error",
        "useExhaustiveDependencies": "off",
        "noUnusedFunctionParameters": "warn",
        "noChildrenProp": "off"
      },
      "complexity": {
        "noBannedTypes": "warn"
      },
      "security": {
        "noDangerouslySetInnerHtml": "warn"
      }
    }
  },
  "javascript": {
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    },
    "formatter": {
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded",
      "semicolons": "always",
      "trailingCommas": "all"
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "off"
      }
    }
  }
}
