{
  "name": "enotion",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint && biome check",
    "format": "biome format --write",
    "check-types": "turbo run check-types",
    "test": "turbo run test",
    "clean:install": "turbo run clean && rm -rf node_modules && rm -rf packages/**/node_modules && rm -rf pnpm-lock.yaml && pnpm install",
    "clean": "turbo run clean",
    "versions": "chmod +x ./scripts/version.sh && ./scripts/version.sh",
    "start": "turbo run start"
  },
  "author": {
    "name": "MJ Anglin",
    "email": "contact@mjanglin.com",
    "url": "https://mjanglin.com"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.6",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "turbo": "^2.5.8",
    "typescript": "5.9.3"
  },
  "packageManager": "pnpm@10.18.3",
  "engines": {
    "node": ">=18"
  },
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/clxrityy/enotion.git"
  },
  "lint-staged": {
    "*.ts": "biome check --write",
    "*.{ts,css,md,js}": "biome format --write"
  },
  "bugs": {
    "url": "https://github.com/clxrityy/enotion/issues",
    "email": "contact@mjanglin.com"
  },
  "homepage": "https://github.com/clxrityy/enotion#readme"
}
