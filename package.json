{
  "name": "enotion",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint && biome check",
    "format": "biome format --write",
    "check-types": "turbo run check-types",
    "test": "turbo run test"
  },
  "author": {
    "name": "MJ Anglin",
    "email": "contact@mjanglin.com",
    "url": "https://mjanglin.com"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "turbo": "^2.5.8",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@10.17.1",
  "engines": {
    "node": ">=23"
  },
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/clxrityy/enotion.git"
  },
  "lint-staged": {
    "*.ts": "biome check --write",
    "*.{ts,css,md,js}": "biome format --write"
  }
}
